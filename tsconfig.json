{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "outDir": "./src/",
    "sourceMap": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "allowUnreachableCode": false,
    "alwaysStrict": true,
    "forceConsistentCasingInFileNames": true
  },
  "exclude": [
    "node_modules",
    "tests"
  ]
}
